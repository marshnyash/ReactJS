{
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "tsx": true
    }
  },
  "rules": {
    "parser": "babel-eslint",
    "extends": ["eslint:recommended", "prettier"],
    "env": {
      "browser": true,
      "es6": true
    },
    "no-unused-vars": "warn",
    "indent": [
      "warn",
      2
    ],
    "quotes": [
      "warn",
      "single"
    ],
    "semi": [
      "warn",
      "always"
    ],
    "no-console": [
      "error",
      {
        "allow": ["error", "log"]
      }
    ]
  }
}